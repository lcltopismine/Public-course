/* File:     hello_serial.c
 *
 * Purpose:  A serial hello, world program
 *
 * Compile:  gcc -g -Wall  -o hello_serial hello_serial.c
 * Run:      ./hello_serial.c
 * 
 * Input:    none
 * Output:   A greeting message
 *
 */
#include <stdio.h>
#include <stdlib.h>

void Hello(void);  /* Thread function */

/*--------------------------------------------------------------------*/
int main(void) {

   Hello();

   return 0; 
}  /* main */

/*-------------------------------------------------------------------
 * Function:    Hello
 * Purpose:     A function that prints message
 */
void Hello(void) {

   printf("Hello !\n");

}  /* Hello */
